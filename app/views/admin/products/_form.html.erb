<%= form_with model: [:admin, @product], class: "space-y-6" do |f| %>

  <div>
    <%= f.label :name, "商品名" %>
    <%= f.text_field :name, class: "input" %>
  </div>

  <div>
    <%= f.label :brand, "ブランド" %>
    <%= f.text_field :brand, class: "input" %>
  </div>

  <div>
    <%= f.label :flavor, "フレーバー" %>
    <%= f.text_field :flavor, class: "input" %>
  </div>

  <div>
    <%= f.label :protein_type, "種類" %>
    <%= f.select :protein_type, Product.protein_types.keys, {}, class: "input" %>
  </div>

  <div>
    <%= f.label :price, "価格帯" %>
    <%= f.number_field :price, class: "input" %>
  </div>

  <div>
    <%= f.label :image, "商品画像" %>
    <%= f.file_field :image %>
  </div>

  <%= f.submit class: "btn-primary" %>

<% end %>