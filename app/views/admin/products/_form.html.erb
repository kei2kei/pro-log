<%= form_with model: [:admin, @product], class: "space-y-8 rounded-2xl border border-base bg-white p-8 shadow-sm" do |f| %>
  <div class="grid gap-6 md:grid-cols-2">
    <div class="space-y-2">
      <%= f.label :name, "商品名", class: "text-sm font-semibold text-stone-700" %>
      <%= f.text_field :name, class: "w-full rounded-lg border border-stone-300 bg-white px-3 py-2 text-stone-900 shadow-sm focus:border-brand focus:outline-none focus:ring-2 focus:ring-brand/30" %>
    </div>

    <div class="space-y-2">
      <%= f.label :brand, "ブランド", class: "text-sm font-semibold text-stone-700" %>
      <%= f.text_field :brand, class: "w-full rounded-lg border border-stone-300 bg-white px-3 py-2 text-stone-900 shadow-sm focus:border-brand focus:outline-none focus:ring-2 focus:ring-brand/30" %>
    </div>

    <div class="space-y-2">
      <%= f.label :flavor, "フレーバー", class: "text-sm font-semibold text-stone-700" %>
      <%= f.text_field :flavor, class: "w-full rounded-lg border border-stone-300 bg-white px-3 py-2 text-stone-900 shadow-sm focus:border-brand focus:outline-none focus:ring-2 focus:ring-brand/30" %>
    </div>

    <div class="space-y-2">
      <%= f.label :protein_type, "種類", class: "text-sm font-semibold text-stone-700" %>
      <%= f.select :protein_type, Product.protein_types.keys, {}, class: "w-full rounded-lg border border-stone-300 bg-white px-3 py-2 text-stone-900 shadow-sm focus:border-brand focus:outline-none focus:ring-2 focus:ring-brand/30" %>
    </div>

    <div class="space-y-2">
      <%= f.label :price, "価格帯", class: "text-sm font-semibold text-stone-700" %>
      <%= f.number_field :price, class: "w-full rounded-lg border border-stone-300 bg-white px-3 py-2 text-stone-900 shadow-sm focus:border-brand focus:outline-none focus:ring-2 focus:ring-brand/30" %>
    </div>

    <div class="md:col-span-2 space-y-4">
      <p class="text-sm font-semibold text-stone-700">栄養成分（1スクープあたり）</p>

      <div class="rounded-2xl border border-base bg-stone-50 p-6">
        <div class="grid gap-6 md:grid-cols-2">

          <div class="space-y-2">
            <%= f.label :protein, "タンパク質（g）", class: "text-sm font-semibold text-stone-700" %>
            <%= f.number_field :protein,
                step: 0.1,
                class: "w-full rounded-lg border border-stone-300 bg-white px-3 py-2 text-stone-900 shadow-sm focus:border-brand focus:outline-none focus:ring-2 focus:ring-brand/30" %>
          </div>

          <div class="space-y-2">
            <%= f.label :fat, "脂質（g）", class: "text-sm font-semibold text-stone-700" %>
            <%= f.number_field :fat,
                step: 0.1,
                class: "w-full rounded-lg border border-stone-300 bg-white px-3 py-2 text-stone-900 shadow-sm focus:border-brand focus:outline-none focus:ring-2 focus:ring-brand/30" %>
          </div>

          <div class="space-y-2">
            <%= f.label :carbohydrate, "炭水化物（g）", class: "text-sm font-semibold text-stone-700" %>
            <%= f.number_field :carbohydrate,
                step: 0.1,
                class: "w-full rounded-lg border border-stone-300 bg-white px-3 py-2 text-stone-900 shadow-sm focus:border-brand focus:outline-none focus:ring-2 focus:ring-brand/30" %>
          </div>

          <div class="space-y-2">
            <%= f.label :calorie, "カロリー（kcal）", class: "text-sm font-semibold text-stone-700" %>
            <%= f.number_field :calorie,
                step: 1,
                class: "w-full rounded-lg border border-stone-300 bg-white px-3 py-2 text-stone-900 shadow-sm focus:border-brand focus:outline-none focus:ring-2 focus:ring-brand/30" %>
          </div>

        </div>

        <p class="mt-4 text-xs text-stone-500">
          ※ ラベル表記や公式サイトを参考に入力してください。
        </p>
      </div>
    </div>

    <div class="space-y-4 md:col-span-2">
      <p class="text-sm font-semibold text-stone-700">画像・参考URL（編集可能）</p>

      <div class="space-y-2">
        <%= f.label :image_url, "外部画像URL（楽天など）", class: "text-sm font-semibold text-stone-700" %>
        <%= f.text_field :image_url,
              class: "w-full rounded-lg border border-stone-300 bg-white px-3 py-2 text-stone-900 shadow-sm focus:border-brand focus:outline-none focus:ring-2 focus:ring-brand/30" %>

        <% if @product.image_url.present? %>
          <div class="mt-2">
            <p class="text-xs text-stone-500 mb-1">プレビュー</p>
            <img src="<%= @product.image_url %>"
                class="h-28 rounded border bg-white object-contain p-2" />
          </div>
        <% end %>
      </div>

      <div class="space-y-2">
        <%= f.label :reference_url, "参考URL（商品ページなど）", class: "text-sm font-semibold text-stone-700" %>
        <%= f.text_field :reference_url,
              class: "w-full rounded-lg border border-stone-300 bg-white px-3 py-2 text-stone-900 shadow-sm focus:border-brand focus:outline-none focus:ring-2 focus:ring-brand/30" %>
      </div>
    </div>
  </div>

  <div class="flex justify-end">
    <%= f.submit "保存する", class: "btn-primary px-6" %>
  </div>

<% end %>
