<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-semibold">商品一覧（管理）</h1>

  <%= link_to "新規登録", new_admin_product_path,
    class: "rounded-lg bg-brand px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-brand/90 transition" %>
</div>

<div class="rounded-2xl border border-base bg-white shadow-sm">
<table class="w-full border border-base bg-white text-sm">
  <thead>
    <tr class="bg-stone-100 text-left text-stone-600 text-xs uppercase tracking-wide">
      <th class="p-3 border-b">ID</th>
      <th class="p-3 border-b">商品名</th>
      <th class="p-3 border-b">ブランド</th>
      <th class="p-3 border-b">種類</th>
      <th class="p-3 border-b">登録日</th>
      <th class="p-3 border-b text-right">操作</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr class="border-b hover:bg-stone-50">
        <td class="p-3"><%= product.id %></td>
        <td class="p-3 font-semibold"><%= product.name %></td>
        <td class="p-3"><%= product.brand %></td>
        <td class="p-3">
          <span class="rounded-full border border-base px-3 py-1 text-xs font-medium">
            <%= product.protein_type %>
          </span>
        </td>

        <td class="p-3 text-stone-600">
          <%= l product.created_at, format: :short %>
        </td>

        <td class="p-3 text-right space-x-2">
          <%= link_to "編集",
            edit_admin_product_path(product),
            class: "inline-block rounded-lg border border-base px-3 py-1.5 text-xs font-semibold text-main hover:bg-stone-50 transition" %>

          <%= link_to "削除",
            admin_product_path(product),
            data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" },
            class: "inline-block rounded-lg bg-red-500 px-3 py-1.5 text-xs font-semibold text-white hover:bg-red-600 transition" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>