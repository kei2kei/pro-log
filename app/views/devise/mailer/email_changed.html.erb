<p><%= t("devise.views.mailer.email_changed.greeting", email: @email) %></p>

<% if @resource.try(:unconfirmed_email?) %>
  <p><%= t("devise.views.mailer.email_changed.pending_body", email: @resource.unconfirmed_email) %></p>
<% else %>
  <p><%= t("devise.views.mailer.email_changed.completed_body", email: @resource.email) %></p>
<% end %>
