<main class="min-h-screen bg-white text-main">
  <div class="mx-auto flex max-w-7xl justify-center px-6 py-16">
    <div class="w-full max-w-md rounded-2xl border border-base bg-white p-8 shadow-sm">
      <h1 class="text-3xl font-semibold font-['Fraunces']">パスワード再設定</h1>
      <p class="mt-2 text-sm text-stone-500">登録済みのメールアドレスに再設定用のリンクを送信します。</p>

      <%= render "devise/shared/error_messages", resource: resource %>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "mt-6 space-y-4" }) do |f| %>
        <div>
          <%= f.label :email, "メールアドレス", class: "text-sm font-medium text-stone-700" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-2 w-full rounded-lg border border-base bg-white px-4 py-3 text-sm text-main focus:border-brand focus:outline-none focus:ring-2 focus:ring-brand-light/30" %>
        </div>

        <%= f.submit "再設定リンクを送信", class: "btn-primary mt-2 w-full" %>
      <% end %>

      <div class="mt-6 text-center text-sm text-stone-500">
        <%= link_to "ログイン画面へ戻る", new_session_path(resource_name), class: "font-semibold text-brand hover:text-brand-dark" %>
      </div>
    </div>
  </div>
</main>
