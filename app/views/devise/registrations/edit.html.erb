<main class="min-h-screen bg-white text-main">
  <section class="border-b border-base bg-white">
    <div class="mx-auto max-w-7xl px-6 py-12">
      <p class="text-xs uppercase tracking-[0.35em] text-brand"><%= t("devise.views.registrations.edit.kicker") %></p>
      <h1 class="mt-4 text-4xl font-semibold font-['Fraunces']">
        <%= t("devise.views.registrations.edit.title") %>
      </h1>
      <p class="mt-2 text-sm text-stone-500">
        <%= t("devise.views.registrations.edit.subtitle") %>
      </p>
    </div>
  </section>
  <section class="mx-auto max-w-3xl px-6 py-12">
  <div class="rounded-3xl border border-base bg-white p-8 shadow-sm">

    <%= form_for(resource, as: resource_name,
      url: registration_path(resource_name),
      html: { method: :put }) do |f| %>

      <%= render "shared/form_errors", resource: resource %>

      <div class="mb-10 border-b border-base pb-8">
        <h2 class="mb-4 text-xl font-semibold"><%= t("devise.views.registrations.edit.email_section_title") %></h2>
        <p class="mb-4 text-sm text-stone-500"><%= t("devise.views.registrations.edit.email_section_note") %></p>

        <div class="mb-6">
          <%= f.label :email, t("devise.views.registrations.edit.email_label"),
            class: "mb-2 block text-sm font-semibold text-stone-700" %>
          <%= f.email_field :email,
            autocomplete: "email",
            class: "w-full rounded-lg border border-base px-4 py-3" %>
        </div>

        <% if resource.pending_reconfirmation? %>
          <div class="mt-4 rounded-xl border border-emerald-100 bg-emerald-50 px-4 py-3 text-sm text-emerald-800">
            <%= t("devise.views.registrations.edit.pending_reconfirmation_html", email: resource.unconfirmed_email).html_safe %>
          </div>
        <% end %>
      </div>

      <h2 class="mb-4 text-xl font-semibold"><%= t("devise.views.registrations.edit.password_section_title") %></h2>

      <div class="mb-6">
        <%= f.label :current_password, t("devise.views.registrations.edit.current_password_label"),
          class: "mb-2 block text-sm font-semibold text-stone-700" %>
        <%= f.password_field :current_password,
          autocomplete: "current-password",
          class: "w-full rounded-lg border border-base px-4 py-3" %>
      </div>

      <div class="mb-6">
        <%= f.label :password, t("devise.views.registrations.edit.password_label"),
          class: "mb-2 block text-sm font-semibold text-stone-700" %>
        <% if @minimum_password_length %>
          <p class="mt-1 text-xs text-stone-400"><%= t("devise.views.registrations.new.password_hint", count: @minimum_password_length) %></p>
        <% end %>
        <p class="mb-2 text-xs text-stone-400"><%= t("devise.views.registrations.edit.password_policy_hint") %></p>
        <%= f.password_field :password,
          autocomplete: "new-password",
          class: "w-full rounded-lg border border-base px-4 py-3" %>
      </div>

      <div class="mb-8">
        <%= f.label :password_confirmation, t("devise.views.registrations.edit.password_confirmation_label"),
          class: "mb-2 block text-sm font-semibold text-stone-700" %>
        <%= f.password_field :password_confirmation,
          autocomplete: "new-password",
          class: "w-full rounded-lg border border-base px-4 py-3" %>
      </div>

      <div class="flex items-center gap-4">
        <%= f.submit t("devise.views.registrations.edit.submit"),
          class: "btn-primary px-6 py-3" %>

        <%= link_to t("devise.views.registrations.edit.back_to_profile"),
          profile_path,
          class: "text-sm text-stone-500 hover:text-brand" %>
      </div>

    <% end %>
  </div>
</section>
</main>
