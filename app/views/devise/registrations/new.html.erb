<main class="min-h-screen bg-stone-50 text-stone-900">
  <div class="mx-auto max-w-md px-6 py-16">
    <h1 class="text-3xl font-semibold font-['Fraunces']">会員登録</h1>
    <p class="mt-2 text-sm text-stone-500">1分で登録できます。</p>

    <%= render "devise/shared/error_messages", resource: resource %>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mt-6 space-y-4" }) do |f| %>
      <div>
        <%= f.label :username, "ユーザーネーム", class: "text-sm font-medium text-stone-700" %>
        <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "mt-2 w-full rounded-xl border border-stone-200 bg-white px-4 py-3 text-sm focus:border-emerald-400 focus:outline-none focus:ring-2 focus:ring-emerald-200" %>
      </div>

      <div>
        <%= f.label :email, "メールアドレス", class: "text-sm font-medium text-stone-700" %>
        <%= f.email_field :email, autocomplete: "email", class: "mt-2 w-full rounded-xl border border-stone-200 bg-white px-4 py-3 text-sm focus:border-emerald-400 focus:outline-none focus:ring-2 focus:ring-emerald-200" %>
      </div>

      <div>
        <%= f.label :password, "パスワード", class: "text-sm font-medium text-stone-700" %>
        <% if @minimum_password_length %>
          <p class="mt-1 text-xs text-stone-400">最低 <%= @minimum_password_length %> 文字</p>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "mt-2 w-full rounded-xl border border-stone-200 bg-white px-4 py-3 text-sm focus:border-emerald-400 focus:outline-none focus:ring-2 focus:ring-emerald-200" %>
      </div>

      <div>
        <%= f.label :password_confirmation, "パスワード確認", class: "text-sm font-medium text-stone-700" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-2 w-full rounded-xl border border-stone-200 bg-white px-4 py-3 text-sm focus:border-emerald-400 focus:outline-none focus:ring-2 focus:ring-emerald-200" %>
      </div>

      <%= f.submit "登録する", class: "mt-2 w-full rounded-full bg-emerald-400 px-6 py-3 text-sm font-semibold text-stone-950 transition hover:bg-emerald-300" %>
    <% end %>

    <div class="mt-6 text-center text-sm text-stone-500">
      すでにアカウントをお持ちですか？
      <%= link_to "ログイン", new_session_path(resource_name), class: "font-semibold text-emerald-600 hover:text-emerald-500" %>
    </div>
  </div>
</main>
