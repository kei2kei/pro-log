<main class="min-h-screen bg-white text-main">
  <div class="mx-auto flex max-w-7xl justify-center px-6 py-16">
    <div class="w-full max-w-md rounded-2xl border border-base bg-white p-8 shadow-sm">
      <h1 class="text-3xl font-semibold font-['Fraunces']"><%= t("registrations.new.title") %></h1>
      <p class="mt-2 text-sm text-stone-500"><%= t("registrations.new.subtitle") %></p>

      <%= render "devise/shared/error_messages", resource: resource %>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mt-6 space-y-4" }) do |f| %>
        <div>
          <%= f.label :username, t("registrations.new.username_label"), class: "text-sm font-medium text-stone-700" %>
          <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "mt-2 w-full rounded-lg border border-base bg-white px-4 py-3 text-sm text-main focus:border-brand focus:outline-none focus:ring-2 focus:ring-brand-light/30" %>
        </div>

        <div>
          <%= f.label :avatar, t("registrations.new.avatar_label"), class: "text-sm font-medium text-stone-700" %>
          <%= f.file_field :avatar, accept: "image/*", class: "mt-2 w-full rounded-lg border border-base bg-white px-4 py-3 text-sm text-stone-600 file:mr-4 file:rounded-lg file:border-0 file:bg-brand-light/20 file:px-4 file:py-2 file:text-sm file:font-semibold file:text-brand-dark hover:file:bg-brand-light/30" %>
        </div>

        <div>
          <%= f.label :email, t("registrations.new.email_label"), class: "text-sm font-medium text-stone-700" %>
          <%= f.email_field :email, autocomplete: "email", class: "mt-2 w-full rounded-lg border border-base bg-white px-4 py-3 text-sm text-main focus:border-brand focus:outline-none focus:ring-2 focus:ring-brand-light/30" %>
        </div>

        <div>
          <%= f.label :password, t("registrations.new.password_label"), class: "text-sm font-medium text-stone-700" %>
          <% if @minimum_password_length %>
            <p class="mt-1 text-xs text-stone-400"><%= t("registrations.new.password_hint", count: @minimum_password_length) %></p>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "mt-2 w-full rounded-lg border border-base bg-white px-4 py-3 text-sm text-main focus:border-brand focus:outline-none focus:ring-2 focus:ring-brand-light/30" %>
        </div>

        <div>
          <%= f.label :password_confirmation, t("registrations.new.password_confirmation_label"), class: "text-sm font-medium text-stone-700" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-2 w-full rounded-lg border border-base bg-white px-4 py-3 text-sm text-main focus:border-brand focus:outline-none focus:ring-2 focus:ring-brand-light/30" %>
        </div>

        <%= f.submit t("registrations.new.submit"), class: "btn-primary mt-2 w-full" %>
      <% end %>

      <% if devise_mapping.omniauthable? %>
        <div class="mt-6 rounded-2xl border border-base bg-stone-50 px-4 py-4 text-center text-sm text-stone-600">
          <p class="font-semibold text-stone-700"><%= t("registrations.new.omniauth_title") %></p>
          <p class="mt-1 text-xs text-stone-500"><%= t("registrations.new.omniauth_note") %></p>
          <div class="mt-3">
            <%= button_to t("registrations.new.omniauth_cta"),
              user_google_oauth2_omniauth_authorize_path,
              method: :post,
              data: { turbo: false },
              class: "btn-outline rounded-full px-5 py-2 text-sm font-semibold",
              form: { data: { turbo: false } } %>
          </div>
        </div>
      <% end %>

      <div class="mt-6 text-center text-[11px] text-stone-500 tracking-tight whitespace-nowrap">
        <%= t("registrations.new.signin_prompt") %>
        <%= link_to t("registrations.new.signin_link"), new_session_path(resource_name), class: "font-semibold text-brand hover:text-brand-dark" %>
      </div>
    </div>
  </div>
</main>
