<main class="min-h-screen bg-white text-main">
  <div class="mx-auto flex max-w-7xl justify-center px-6 py-16">
    <div class="w-full max-w-md rounded-2xl border border-base bg-white p-8 shadow-sm">
      <h1 class="text-3xl font-semibold font-['Fraunces']"><%= t("devise.views.sessions.new.title") %></h1>
      <p class="mt-2 text-sm text-stone-500"><%= t("devise.views.sessions.new.subtitle") %></p>

      <%= render "shared/form_errors", resource: resource %>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "mt-6 space-y-4" }) do |f| %>
        <div>
          <%= f.label :email, t("devise.views.sessions.new.email_label"), class: "text-sm font-medium text-stone-700" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "mt-2 w-full rounded-lg border border-base bg-white px-4 py-3 text-sm text-main focus:border-brand focus:outline-none focus:ring-2 focus:ring-brand-light/30" %>
        </div>

        <div>
          <%= f.label :password, t("devise.views.sessions.new.password_label"), class: "text-sm font-medium text-stone-700" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "mt-2 w-full rounded-lg border border-base bg-white px-4 py-3 text-sm text-main focus:border-brand focus:outline-none focus:ring-2 focus:ring-brand-light/30" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center gap-2 text-sm text-stone-600">
            <%= f.check_box :remember_me, class: "h-4 w-4 rounded border-stone-300 text-brand focus:ring-brand-light/30" %>
            <%= f.label :remember_me, t("devise.views.sessions.new.remember_me"), class: "select-none" %>
          </div>
        <% end %>

        <%= f.submit t("devise.views.sessions.new.submit"), class: "btn-primary mt-2 w-full" %>
      <% end %>

      <div class="mt-6 text-center text-[11px] text-stone-500 tracking-tight whitespace-nowrap">
        <%= t("devise.views.sessions.new.signup_prompt") %>
        <%= link_to t("devise.views.sessions.new.signup_link"), new_registration_path(resource_name), class: "font-semibold text-brand hover:text-brand-dark" %>
      </div>

      <% if devise_mapping.omniauthable? %>
        <div class="mt-6 rounded-2xl border border-base bg-stone-50 px-4 py-4 text-center text-sm text-stone-600">
          <p class="font-semibold text-stone-700"><%= t("devise.views.sessions.new.omniauth_title") %></p>
          <p class="mt-1 text-xs text-stone-500"><%= t("devise.views.sessions.new.omniauth_note") %></p>
          <div class="mt-3">
            <%= button_to t("devise.views.sessions.new.omniauth_cta"),
              user_google_oauth2_omniauth_authorize_path,
              method: :post,
              data: { turbo: false },
              class: "btn-outline rounded-full px-5 py-2 text-sm font-semibold",
              form: { data: { turbo: false } } %>
          </div>
        </div>
      <% end %>

      <% if devise_mapping.recoverable? %>
        <div class="mt-4 text-center text-xs text-stone-500">
          <%= link_to t("devise.views.sessions.new.forgot_password"), new_password_path(resource_name), class: "font-semibold text-brand hover:text-brand-dark" %>
        </div>
      <% end %>

      <% if devise_mapping.confirmable? %>
        <div class="mt-2 text-center text-xs text-stone-500">
          <%= link_to t("devise.views.sessions.new.resend_confirmation"), new_user_confirmation_path(resource_name), class: "font-semibold text-brand hover:text-brand-dark" %>
        </div>
      <% end %>

      <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) %>
        <div class="mt-2 text-center text-xs text-stone-500">
          <%= link_to t("devise.views.sessions.new.unlock_account"), new_user_unlock_path, class: "font-semibold text-brand hover:text-brand-dark" %>
        </div>
      <% end %>
    </div>
  </div>
</main>
