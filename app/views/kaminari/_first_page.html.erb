<%# Link to the "First" page
  - available local variables
    url:           url to the first page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% if current_page.first? %>
  <span class="hidden h-10 w-10 items-center justify-center rounded-full border border-base text-sm font-semibold text-stone-400 sm:inline-flex">
    «
  </span>
<% else %>
  <%= link_to "«", url, remote: remote, class: "hidden h-10 w-10 items-center justify-center rounded-full border border-base text-sm font-semibold text-stone-600 hover:border-stone-300 sm:inline-flex", aria: { label: t("kaminari.first") } %>
<% end %>
