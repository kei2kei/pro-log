<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<% if current_page.last? %>
  <span class="inline-flex h-10 w-10 items-center justify-center rounded-full border border-base text-sm font-semibold text-stone-400">
    ›
  </span>
<% else %>
  <%= link_to "›", url, rel: "next", remote: remote, class: "inline-flex h-10 w-10 items-center justify-center rounded-full border border-base text-sm font-semibold text-stone-600 hover:border-stone-300", aria: { label: "次へ" } %>
<% end %>
