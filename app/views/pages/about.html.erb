<main class="min-h-screen bg-white text-main">
  <section class="border-b border-base bg-white">
    <div class="mx-auto max-w-7xl px-6 py-12">
      <p class="text-xs uppercase tracking-[0.35em] text-brand"><%= t("pages.about.kicker") %></p>
      <h1 class="mt-4 text-4xl font-semibold font-['Fraunces']"><%= t("pages.about.title") %></h1>
      <p class="mt-4 max-w-2xl text-base leading-relaxed text-stone-700">
        <%= t("pages.about.intro_body_html").html_safe %>
      </p>
    </div>
  </section>

  <section id="signup" class="border-t border-base bg-white">
    <div class="mx-auto max-w-7xl px-6 py-12">
      <h2 class="text-3xl font-semibold leading-snug font-['Fraunces']"><%= t("pages.about.signup_title") %></h2>
      <p class="mt-4 text-base leading-relaxed text-stone-700">
        <%= t("pages.about.signup_body_html").html_safe %>
      </p>

      <ul class="mt-4 list-disc space-y-2 pl-5 text-base text-stone-700">
        <li><%= t("pages.about.signup_list1") %></li>
        <li><%= t("pages.about.signup_list2") %></li>
        <li><%= t("pages.about.signup_list3") %></li>
      </ul>

    </div>
  </section>

  <section id="search-products" class="border-t border-base bg-white">
    <div class="mx-auto max-w-7xl px-6 py-12">
      <h2 class="text-3xl font-semibold leading-snug font-['Fraunces']"><%= t("pages.about.search_title") %></h2>
      <p class="mt-4 text-base leading-relaxed text-stone-700">
        <%= t("pages.about.search_body") %>
      </p>

      <ul class="mt-4 list-disc space-y-2 pl-5 text-base text-stone-700">
        <li><%= t("pages.about.search_list1") %></li>
        <li><%= t("pages.about.search_list2") %></li>
        <li><%= t("pages.about.search_list3") %></li>
      </ul>
    </div>
  </section>

  <section id="product-detail" class="border-t border-base bg-white">
    <div class="mx-auto max-w-7xl px-6 py-12">
      <h2 class="text-3xl font-semibold leading-snug font-['Fraunces']"><%= t("pages.about.detail_title") %></h2>
      <p class="mt-4 text-base leading-relaxed text-stone-700">
        <%= t("pages.about.detail_body") %>
      </p>

      <ul class="mt-4 list-disc space-y-2 pl-5 text-base text-stone-700">
        <li><%= t("pages.about.detail_list1") %></li>
        <li><%= t("pages.about.detail_list2") %></li>
        <li><%= t("pages.about.detail_list3") %></li>
      </ul>

    </div>
  </section>

  <section id="review" class="border-t border-base bg-white">
    <div class="mx-auto max-w-7xl px-6 py-12">
      <h2 class="text-3xl font-semibold leading-snug font-['Fraunces']"><%= t("pages.about.review_title") %></h2>
      <p class="mt-4 text-base leading-relaxed text-stone-700">
        <%= t("pages.about.review_body_html").html_safe %>
      </p>

      <ul class="mt-4 list-disc space-y-2 pl-5 text-base text-stone-700">
        <li><%= t("pages.about.review_list1") %></li>
        <li><%= t("pages.about.review_list2") %></li>
        <li><%= t("pages.about.review_list3") %></li>
      </ul>

    </div>
  </section>

  <section id="profile" class="border-t border-base bg-white">
    <div class="mx-auto max-w-7xl px-6 py-12">
      <h2 class="text-3xl font-semibold leading-snug font-['Fraunces']"><%= t("pages.about.profile_title") %></h2>
      <p class="mt-4 text-base leading-relaxed text-stone-700">
        <%= t("pages.about.profile_body") %>
      </p>

      <ul class="mt-4 list-disc space-y-2 pl-5 text-base text-stone-700">
        <li><%= t("pages.about.profile_list1") %></li>
        <li><%= t("pages.about.profile_list2") %></li>
        <li><%= t("pages.about.profile_list3") %></li>
        <li><%= t("pages.about.profile_list4") %></li>
      </ul>

    </div>
  </section>
</main>
