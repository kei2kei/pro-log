<div class="rounded-3xl border border-base bg-white p-6 shadow-sm transition hover:-translate-y-1 hover:shadow-md">
  <%= link_to product_path(product), class: "block" do %>
    <div class="aspect-square w-full overflow-hidden rounded-2xl bg-stone-100 relative">
      <% if product.image_url.present? %>
        <%= image_tag product.image_url,
          class: "h-full w-full object-cover",
          alt: product.name %>
      <% else %>
        <div class="flex h-full w-full items-center justify-center text-sm text-stone-400">
          No Image
        </div>
      <% end %>
    </div>
  <% end %>
  <% if product.image_url.present? %>
    <% safe_reference_url = safe_external_url(product.reference_url) %>
    <div class="mt-2 flex items-center justify-end">
      <% if safe_reference_url.present? %>
        <%= link_to safe_reference_url,
          target: "_blank",
          rel: "noopener",
          class: "group flex items-center gap-1 text-xs text-stone-500 transition-colors hover:underline hover:text-stone-500" do %>
          楽天商品ページへ
          <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 group-hover:text-brand" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 3h7m0 0v7m0-7L10 14"/>
          </svg>
        <% end %>
      <% else %>
        <span class="text-xs text-stone-500">画像提供：楽天市場</span>
      <% end %>
    </div>
  <% end %>

  <div class="mt-5 space-y-2">
    <p class="text-xs font-semibold uppercase tracking-[0.2em] text-brand">
      <%= product.protein_type %> / <%= product.flavor %>
    </p>
    <h2 class="text-lg font-semibold">
      <%= link_to product.name, product_path(product), class: "hover:underline" %>
    </h2>
    <p class="text-sm text-stone-500"><%= product.brand %></p>
    <p class="text-sm font-semibold text-stone-700">
      <%= number_to_currency(product.price, unit: "¥", precision: 0, format: "%u%n") %>
    </p>
    <div class="flex items-center justify-between pt-2 text-sm text-stone-600">
      <span>総合満足度</span>
      <% if (avg_score = product.reviews.average(:overall_score)) %>
        <% rounded = avg_score.round %>
        <span class="text-amber-400"><%= "★" * rounded %><%= "☆" * (5 - rounded) %></span>
        <span class="text-base font-semibold text-stone-900"><%= format("%.1f", avg_score) %>/5.0</span>
      <% else %>
        <span class="text-sm text-stone-400">未評価</span>
      <% end %>
    </div>
  </div>
  <div class="pt-4">
    <%= render "shared/bookmark_button",
      product: product,
      bookmark: bookmarks_by_product_id[product.id] %>
  </div>
</div>
