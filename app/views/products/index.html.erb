<main class="min-h-screen bg-white text-main">
  <section class="border-b border-base bg-white">
    <div class="mx-auto max-w-7xl px-6 py-12">
      <h1 class="text-4xl font-semibold font-['Fraunces']">プロテイン一覧</h1>
      <p class="mt-3 text-sm text-stone-500">
        甘さ・濃さ・溶けやすさなどのレビューをもとに比較できます。
      </p>

      <div class="mt-8">
        <%= search_form_for @q, url: products_path, method: :get, class: "space-y-4" do |f| %>
          <div class="flex flex-wrap items-center gap-3">
            <%= f.text_field :name_or_brand_or_flavor_or_tags_name_cont,
              placeholder: "商品名、ブランド名、フレーバー、タグ など",
              class: "w-full max-w-2xl rounded-full border border-base bg-white px-5 py-3 text-sm text-stone-600 placeholder:text-stone-400" %>
          </div>
          <div class="flex flex-wrap items-end gap-4">
            <div class="flex flex-col gap-1 text-xs text-stone-500">
              <span>価格帯</span>
              <div class="flex items-center gap-2 rounded-full border border-base bg-white px-4 py-2 text-sm text-stone-600">
                <%= f.label :price_gteq, "最低価格", class: "sr-only" %>
                <%= f.number_field :price_gteq, placeholder: "¥0", class: "w-20 bg-transparent text-sm text-stone-600 placeholder:text-stone-400 focus:outline-none" %>
                <span class="text-stone-400">~</span>
                <%= f.label :price_lteq, "最高価格", class: "sr-only" %>
                <%= f.number_field :price_lteq, placeholder: "指定なし", class: "w-24 bg-transparent text-sm text-stone-600 placeholder:text-stone-400 focus:outline-none" %>
              </div>
            </div>
            <div class="flex flex-col gap-1 text-xs text-stone-500">
              <span>満足度（以上）</span>
              <div class="flex items-center gap-2 rounded-full border border-base bg-white px-4 py-2 text-sm text-stone-600">
                <%= f.label :reviews_overall_score_avg_gteq, "満足度（以上）", class: "sr-only" %>
                <%= f.hidden_field :reviews_overall_score_avg_gteq, value: params.dig(:q, :reviews_overall_score_avg_gteq) %>
                <div class="flex items-center gap-1" data-star-filter>
                  <% 1.upto(5) do |score| %>
                    <button type="button" data-score="<%= score %>" class="text-lg text-stone-300">★</button>
                  <% end %>
                  <span class="ml-2 text-xs text-stone-400">以上</span>
                </div>
              </div>
            </div>
            <div class="flex flex-col gap-1 text-xs text-stone-500">
              <span>プロテインタイプ</span>
              <%= f.label :protein_type_eq, "プロテインタイプ", class: "sr-only" %>
              <%= f.select :protein_type_eq,
                Product.protein_types.map { |k, v| [k, v] },
                { include_blank: "プロテインの種類" },
                class: "rounded-full border border-base bg-white px-5 py-2 text-sm text-stone-600" %>
            </div>
            <%= f.submit "検索", class: "btn-primary rounded-full px-6 py-2" %>
            <%= link_to "リセット", products_path, class: "rounded-full border border-base px-5 py-2 text-sm font-semibold text-stone-600 hover:border-stone-300" %>
          </div>
        <% end %>
      </div>
    </div>
  </section>

  <section class="mx-auto max-w-7xl px-6 py-12">
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      <% @products.each do |product| %>
        <div class="rounded-3xl border border-base bg-white p-6 shadow-sm transition hover:-translate-y-1 hover:shadow-md">
          <%= link_to product_path(product), class: "block" do %>
            <div class="aspect-square w-full overflow-hidden rounded-2xl bg-stone-100">
              <% if product.image.attached? %>
                <%= image_tag product.image.variant(resize_to_fill: [480, 480]), class: "h-full w-full object-cover", alt: product.name %>
              <% else %>
                <div class="flex h-full w-full items-center justify-center text-sm text-stone-400">
                  No Image
                </div>
              <% end %>
            </div>

            <div class="mt-5 space-y-2">
              <p class="text-xs font-semibold uppercase tracking-[0.2em] text-brand">
                <%= product.protein_type %> / <%= product.flavor %>
              </p>
              <h2 class="text-lg font-semibold"><%= product.name %></h2>
              <p class="text-sm text-stone-500"><%= product.brand %></p>
              <div class="flex items-center justify-between pt-2 text-sm text-stone-600">
                <span>100gあたり</span>
                <span class="text-base font-semibold text-stone-900">¥<%= product.price %></span>
              </div>
            </div>
          <% end %>
          <div class="pt-4">
            <%= render "shared/bookmark_button",
              product: product,
              bookmark: @bookmarks_by_product_id[product.id] %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="mt-12 flex justify-center gap-3">
      <button class="flex h-12 w-12 items-center justify-center rounded-2xl border border-base text-sm font-semibold text-stone-700">
        1
      </button>
      <button class="flex h-12 w-12 items-center justify-center rounded-2xl border border-base text-sm font-semibold text-stone-700">
        2
      </button>
      <button class="flex h-12 w-12 items-center justify-center rounded-2xl border border-base text-sm font-semibold text-stone-700">
        3
      </button>
      <button class="flex h-12 w-12 items-center justify-center rounded-2xl border border-base text-sm font-semibold text-stone-700">
        4
      </button>
      <button class="flex h-12 w-12 items-center justify-center rounded-2xl border border-base text-sm font-semibold text-stone-700">
        5
      </button>
      <button class="flex h-12 w-16 items-center justify-center rounded-2xl bg-brand text-sm font-semibold text-white">
        次
      </button>
    </div>
  </section>
</main>

<script>
  const initStarFilter = () => {
    const container = document.querySelector("[data-star-filter]");
    if (!container) return;

    const input = container.closest("form").querySelector('input[name="q[reviews_overall_score_avg_gteq]"]');
    const buttons = container.querySelectorAll("button[data-score]");

    const setActive = (value) => {
      buttons.forEach((button) => {
        const score = Number(button.dataset.score);
        button.classList.toggle("text-accent", score <= value);
        button.classList.toggle("text-stone-300", score > value);
      });
    };

    setActive(Number(input.value || 0));

    buttons.forEach((button) => {
      button.addEventListener("click", () => {
        const score = Number(button.dataset.score);
        const current = Number(input.value || 0);
        const next = current === score ? 0 : score;
        input.value = next;
        setActive(next);
      });
    });
  };

  document.addEventListener("turbo:load", initStarFilter);
  document.addEventListener("turbo:render", initStarFilter);
</script>
