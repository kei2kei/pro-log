<main class="min-h-screen bg-white text-main">
  <section class="border-b border-base bg-white">
    <div class="mx-auto max-w-7xl px-6 py-12">
      <h1 class="text-4xl font-semibold font-['Fraunces']">プロテイン一覧</h1>
      <p class="mt-3 text-sm text-stone-500">
        甘さ・濃さ・溶けやすさなどのレビューをもとに比較できます。
      </p>

      <div class="mt-8">
        <%= search_form_for @q, url: products_path, method: :get, class: "space-y-4" do |f| %>
          <div class="flex flex-wrap items-center gap-3">
            <%= f.text_field :name_or_brand_or_flavor_or_tags_name_cont,
              placeholder: "商品名、ブランド名、フレーバー、タグ など",
              class: "w-full max-w-2xl rounded-full border border-base bg-white px-5 py-3 text-sm text-stone-600 placeholder:text-stone-400" %>
          </div>
          <div class="flex flex-wrap items-end gap-4">
            <div class="flex flex-col gap-1 text-xs text-stone-500">
              <span>価格帯</span>
              <div class="flex items-center gap-2 rounded-full border border-base bg-white px-4 py-2 text-sm text-stone-600">
                <%= f.label :price_gteq, "最低価格", class: "sr-only" %>
                <%= f.number_field :price_gteq, placeholder: "¥0", class: "w-20 bg-transparent text-sm text-stone-600 placeholder:text-stone-400 focus:outline-none" %>
                <span class="text-stone-400">~</span>
                <%= f.label :price_lteq, "最高価格", class: "sr-only" %>
                <%= f.number_field :price_lteq, placeholder: "指定なし", class: "w-24 bg-transparent text-sm text-stone-600 placeholder:text-stone-400 focus:outline-none" %>
              </div>
            </div>
            <div class="flex flex-col gap-1 text-xs text-stone-500">
              <span>満足度（以上）</span>
              <div class="flex items-center gap-2 rounded-full border border-base bg-white px-4 py-2 text-sm text-stone-600" data-controller="star-filter">
                <%= f.label :reviews_overall_score_avg_gteq, "満足度（以上）", class: "sr-only" %>
                <%= f.hidden_field :reviews_overall_score_avg_gteq, value: params.dig(:q, :reviews_overall_score_avg_gteq), data: { "star-filter-target": "input" } %>
                <div class="flex items-center gap-1">
                  <% 1.upto(5) do |score| %>
                    <button type="button"
                      data-score="<%= score %>"
                      data-action="click->star-filter#select"
                      data-star-filter-target="button"
                      class="text-lg text-stone-300">
                      ★
                    </button>
                  <% end %>
                  <span class="ml-2 text-xs text-stone-400">以上</span>
                </div>
              </div>
            </div>
            <div class="flex flex-col gap-1 text-xs text-stone-500">
              <span>プロテインタイプ</span>
              <%= f.label :protein_type_eq, "プロテインタイプ", class: "sr-only" %>
              <%= f.select :protein_type_eq,
                Product.protein_types.map { |k, v| [k, v] },
                { include_blank: "プロテインの種類" },
                class: "rounded-full border border-base bg-white px-5 py-2 text-sm text-stone-600" %>
            </div>
            <%= f.submit "検索", class: "btn-primary rounded-full px-6 py-2" %>
            <%= link_to "リセット", products_path, class: "rounded-full border border-base px-5 py-2 text-sm font-semibold text-stone-600 hover:border-stone-300" %>
          </div>
        <% end %>
      </div>
    </div>
  </section>

  <section class="mx-auto max-w-7xl px-6 py-12">
    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
      <%= render partial: "products/product",
        collection: @products,
        as: :product,
        locals: { bookmarks_by_product_id: @bookmarks_by_product_id } %>
    </div>

    <div class="mt-12 flex justify-center">
      <%= paginate @products %>
    </div>
  </section>
</main>
