<main class="min-h-screen bg-white text-main">
  <section class="border-b border-base bg-white">
    <div class="mx-auto max-w-7xl px-6 py-12">
      <p class="text-xs uppercase tracking-[0.35em] text-brand">Product Detail</p>
      <h1 class="mt-4 text-4xl font-semibold font-['Fraunces']">プロテイン詳細</h1>
    </div>
  </section>

  <section class="mx-auto max-w-7xl px-6 py-12">
    <div class="grid items-stretch gap-10 lg:grid-cols-[1.1fr_0.9fr]">
      <div class="space-y-6">
        <div class="space-y-2">
          <p class="text-sm font-semibold text-brand">商品名</p>
          <h2 class="text-3xl font-semibold"><%= @product.name %></h2>
        </div>
        <div class="grid gap-4 text-sm text-stone-600">
          <div class="flex items-center justify-between border-b border-base pb-3">
            <span>ブランド</span>
            <span class="font-semibold text-stone-900"><%= @product.brand %></span>
          </div>
          <div class="flex items-center justify-between border-b border-base pb-3">
            <span>種類</span>
            <span class="font-semibold text-stone-900"><%= @product.protein_type %></span>
          </div>
          <div class="flex items-center justify-between border-b border-base pb-3">
            <span>フレーバー</span>
            <span class="font-semibold text-stone-900"><%= @product.flavor.presence || "未登録" %></span>
          </div>
          <div class="flex items-center justify-between border-b border-base pb-3">
            <span>価格帯</span>
            <span class="font-semibold text-stone-900">¥<%= @product.price %></span>
          </div>
          <div class="rounded-2xl border border-base bg-white p-4 shadow-sm">
            <p class="text-sm font-semibold text-stone-700">栄養成分（100gあたり）</p>
            <p class="mt-2 text-sm text-stone-600">
              <%= @product.calorie || "未登録" %>kcal
              （P:<%= @product.protein || "?" %>g / F:<%= @product.fat || "?" %>g / C:<%= @product.carbohydrate || "?" %>g）
            </p>
          </div>
        </div>

        <% if @product.tags.any? %>
          <div class="flex flex-wrap gap-3">
            <% @product.tags.each do |tag| %>
              <span class="rounded-full border border-brand px-4 py-2 text-xs font-semibold text-brand">#<%= tag.name %></span>
            <% end %>
          </div>
        <% end %>

        <div class="flex items-center gap-4 rounded-2xl border border-base bg-white px-5 py-4 shadow-sm">
          <span class="text-sm font-semibold text-stone-600">総合満足度</span>
          <% average_score = @product.overall_average_score %>
          <% if average_score.present? %>
            <span class="text-lg font-semibold text-stone-900"><%= format("%.1f", average_score) %>/5.0</span>
            <span class="text-accent"><%= "★" * average_score.round %><%= "☆" * (5 - average_score.round) %></span>
          <% else %>
            <span class="text-lg font-semibold text-stone-900">評価準備中</span>
          <% end %>
        </div>

      </div>

      <div class="flex h-full flex-col rounded-3xl border border-base bg-white p-6 shadow-sm">
        <div class="aspect-[4/3] max-h-[420px] overflow-hidden rounded-2xl bg-stone-100 sm:max-h-[480px]">
          <% if @product.image.attached? %>
            <%= image_tag @product.image.variant(resize_to_fill: [640, 640]), class: "h-full w-full object-cover", alt: @product.name %>
          <% else %>
            <div class="flex h-full w-full items-center justify-center text-sm text-stone-400">
              No Image
            </div>
          <% end %>
        </div>
        <div class="mt-4 flex justify-center">
          <%= render "shared/bookmark_button",
            product: @product,
            bookmark: @bookmarks_by_product_id[@product.id] %>
        </div>
      </div>
    </div>
  </section>

  <section class="border-t border-base bg-white">
    <div class="mx-auto max-w-7xl px-6 py-12">
      <h2 class="text-3xl font-semibold font-['Fraunces']">このプロテインの特徴</h2>
      <p class="mt-3 text-sm text-stone-500">レビュー集計後に表示されます。</p>

      <div class="mt-10">
        <%= render "shared/axis_scores", values: @product.review_averages %>
      </div>
    </div>
  </section>

  <section class="mx-auto max-w-7xl px-6 py-12">
    <div class="flex items-center justify-between">
      <h2 class="text-3xl font-semibold font-['Fraunces']">レビュー一覧</h2>
      <%= link_to "レビューをする", new_product_review_path(@product), class: "btn-primary rounded-full px-5 py-2" %>
    </div>

    <div class="mt-8 space-y-6">
      <% if @reviews.any? %>
        <%= render partial: "reviews/review", collection: @reviews, as: :review %>
      <% else %>
        <div class="rounded-3xl border border-dashed border-base bg-white p-8 text-center text-sm text-stone-500">
          まだレビューがありません。
        </div>
      <% end %>
    </div>
  </section>
</main>
