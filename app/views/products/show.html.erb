<main class="min-h-screen bg-white text-main">
  <div class="js-product-show-skeleton mx-auto max-w-7xl px-6 py-12" aria-hidden="true">
    <div class="grid gap-8 lg:grid-cols-[1.1fr_0.9fr]">
      <div class="space-y-6">
        <div class="h-6 w-32 rounded-full bg-stone-200"></div>
        <div class="h-10 w-2/3 rounded-full bg-stone-200"></div>
        <div class="space-y-3">
          <% 4.times do %>
            <div class="h-4 w-full rounded-full bg-stone-200"></div>
          <% end %>
        </div>
        <div class="h-20 rounded-2xl bg-stone-100"></div>
      </div>
      <div class="h-[480px] rounded-3xl bg-stone-100"></div>
    </div>
  </div>

  <div class="js-product-show-body">
  <section class="border-b border-base bg-white">
    <div class="mx-auto max-w-7xl px-6 py-12">
      <p class="text-xs uppercase tracking-[0.35em] text-brand"><%= t("products.show.kicker") %></p>
      <h1 class="mt-4 text-4xl font-semibold font-['Fraunces']"><%= t("products.show.title") %></h1>
    </div>
  </section>

  <section class="mx-auto max-w-7xl px-6 py-12">
    <div class="grid items-stretch gap-10 lg:grid-cols-[1.1fr_0.9fr]">
      <div class="space-y-6">
        <div class="space-y-2">
          <p class="text-sm font-semibold text-brand"><%= t("products.show.name_label") %></p>
          <h2 class="text-3xl font-semibold"><%= @product.name %></h2>
        </div>
        <div class="grid gap-4 text-sm text-stone-600">
          <div class="flex items-center justify-between border-b border-base pb-3">
            <span><%= t("products.show.brand_label") %></span>
            <span class="font-semibold text-stone-900"><%= @product.brand %></span>
          </div>
          <div class="flex items-center justify-between border-b border-base pb-3">
            <span><%= t("products.show.type_label") %></span>
            <span class="font-semibold text-stone-900"><%= @product.protein_type %></span>
          </div>
          <div class="flex items-center justify-between border-b border-base pb-3">
            <span><%= t("products.show.flavor_label") %></span>
            <span class="font-semibold text-stone-900"><%= @product.flavor.presence || t("products.show.flavor_fallback") %></span>
          </div>
          <div class="flex items-center justify-between border-b border-base pb-3">
            <span><%= t("products.show.price_label") %></span>
            <span class="font-semibold text-stone-900">¥<%= @product.price %></span>
          </div>
          <div class="rounded-2xl border border-base bg-white p-4 shadow-sm">
            <p class="text-sm font-semibold text-stone-700"><%= t("products.show.nutrition_title") %></p>
            <p class="mt-2 text-sm text-stone-600">
              <%= @product.calorie || "---" %>kcal
              （P:<%= @product.protein || "-" %>g / F:<%= @product.fat || "-" %>g / C:<%= @product.carbohydrate || "-" %>g）
            </p>
          </div>
        </div>

        <% if @product.tags.any? %>
          <div class="flex flex-wrap gap-3">
            <% @product.tags.each do |tag| %>
              <span class="rounded-full border border-brand px-4 py-2 text-xs font-semibold text-brand">#<%= tag.name %></span>
            <% end %>
          </div>
        <% end %>

        <div class="flex items-center gap-4 rounded-2xl border border-base bg-white px-5 py-4 shadow-sm">
          <span class="text-sm font-semibold text-stone-600"><%= t("products.show.overall_label") %></span>
          <% average_score = @product.overall_average_score %>
          <% if average_score.present? %>
            <span class="text-lg font-semibold text-stone-900"><%= format("%.1f", average_score) %>/5.0</span>
            <span class="text-accent"><%= "★" * average_score.round %><%= "☆" * (5 - average_score.round) %></span>
          <% else %>
            <span class="text-lg font-semibold text-stone-900"><%= t("products.show.overall_pending") %></span>
          <% end %>
        </div>

      </div>

      <div class="flex h-full flex-col rounded-3xl border border-base bg-white p-6 shadow-sm">
        <div class="relative flex items-center justify-center rounded-2xl border border-base">
          <% if @product.image_url.present? %>
            <%= image_tag @product.image_url,
              class: "block max-w-full max-h-[480px] object-contain",
              alt: @product.name %>
          <% else %>
            <div class="flex h-64 w-full items-center justify-center text-sm text-stone-400">
              <%= t("products.show.no_image") %>
            </div>
          <% end %>
        </div>

        <% if @product.image_url.present? %>
          <% safe_reference_url = safe_external_url(@product.reference_url) %>
          <div class="mt-3 flex flex-col items-center gap-1">
            <% if safe_reference_url.present? %>
              <%= link_to t("products.show.rakuten_link"), safe_reference_url,
                    target: "_blank",
                    rel: "noopener",
                    class: "text-sm font-semibold text-brand hover:underline" %>
            <% end %>
            <p class="text-[11px] text-stone-400">
              <%= t("products.show.rakuten_credit") %>
            </p>
          </div>
        <% end %>
        <div class="mt-4 flex flex-col items-center gap-2">
          <% if user_signed_in? %>
            <div class="w-full max-w-[220px]">
              <%= render "shared/bookmark_button",
                product: @product,
                bookmark: @bookmarks_by_product_id[@product.id] %>
            </div>
          <% end %>
          <div class="w-full max-w-[220px]">
            <%= render "shared/compare_button", product: @product %>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="border-t border-base bg-white">
    <div class="mx-auto max-w-7xl px-6 py-12">
      <h2 class="text-3xl font-semibold font-['Fraunces']"><%= t("products.show.feature_title") %></h2>
      <p class="mt-3 text-sm text-stone-500"><%= t("products.show.feature_note") %></p>

      <div class="mt-10">
        <%= render "shared/axis_scores", values: @product.review_averages %>
      </div>
    </div>
  </section>

  <section class="mx-auto max-w-7xl px-6 py-12">
    <div class="flex flex-col items-start gap-4 sm:flex-row sm:items-center sm:justify-between">
      <h2 class="text-3xl font-semibold font-['Fraunces']"><%= t("products.show.reviews_title") %></h2>
      <% if user_signed_in? && !@reviewed_by_current_user %>
        <%= link_to t("products.show.review_cta"), new_product_review_path(@product), class: "btn-primary rounded-full px-5 py-2" %>
      <% end %>
    </div>

    <div class="mt-8 space-y-6">
      <% if @reviews.any? %>
        <%= render partial: "reviews/review", collection: @reviews, as: :review %>
      <% else %>
        <div class="rounded-3xl border border-dashed border-base bg-white p-8 text-center text-sm text-stone-500">
          <%= t("products.show.reviews_empty") %>
        </div>
      <% end %>
    </div>
    <% if @reviews.any? %>
      <div class="mt-10 flex justify-center">
        <%= paginate @reviews %>
      </div>
    <% end %>
  </section>
  </div>
</main>
