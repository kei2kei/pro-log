<main class="min-h-screen bg-stone-50 text-stone-900">
  <section class="border-b border-stone-200 bg-white">
    <div class="mx-auto max-w-6xl px-6 py-12">
      <p class="text-xs uppercase tracking-[0.4em] text-emerald-600">Product Detail</p>
      <h1 class="mt-4 text-4xl font-semibold font-['Fraunces']">プロテイン詳細</h1>
    </div>
  </section>

  <section class="mx-auto max-w-6xl px-6 py-12">
    <div class="grid gap-10 lg:grid-cols-[1.1fr_0.9fr]">
      <div class="space-y-6">
        <div class="space-y-2">
          <p class="text-sm font-semibold text-emerald-600">商品名</p>
          <h2 class="text-3xl font-semibold"><%= @product.name %></h2>
        </div>
        <div class="grid gap-4 text-sm text-stone-600">
          <div class="flex items-center justify-between border-b border-stone-200 pb-3">
            <span>ブランド</span>
            <span class="font-semibold text-stone-900"><%= @product.brand %></span>
          </div>
          <div class="flex items-center justify-between border-b border-stone-200 pb-3">
            <span>種類</span>
            <span class="font-semibold text-stone-900"><%= @product.protein_type %></span>
          </div>
          <div class="flex items-center justify-between border-b border-stone-200 pb-3">
            <span>フレーバー</span>
            <span class="font-semibold text-stone-900"><%= @product.flavor.presence || "未登録" %></span>
          </div>
          <div class="flex items-center justify-between border-b border-stone-200 pb-3">
            <span>価格帯</span>
            <span class="font-semibold text-stone-900">¥<%= @product.price %></span>
          </div>
          <div class="rounded-2xl border border-stone-200 bg-white p-4">
            <p class="text-sm font-semibold text-stone-700">栄養成分（100gあたり）</p>
            <p class="mt-2 text-sm text-stone-600">
              <%= @product.calorie || "未登録" %>kcal
              （P:<%= @product.protein || "?" %>g / F:<%= @product.fat || "?" %>g / C:<%= @product.carbohydrate || "?" %>g）
            </p>
          </div>
        </div>

        <div class="flex flex-wrap gap-3">
          <span class="rounded-full border border-emerald-500 px-4 py-2 text-xs font-semibold text-emerald-600">#タグ</span>
          <span class="rounded-full border border-emerald-500 px-4 py-2 text-xs font-semibold text-emerald-600">#タグ</span>
          <span class="rounded-full border border-emerald-500 px-4 py-2 text-xs font-semibold text-emerald-600">#タグ</span>
        </div>

        <div class="flex items-center gap-4 rounded-2xl border border-stone-200 bg-white px-5 py-4">
          <span class="text-sm font-semibold text-stone-600">総合満足度</span>
          <% average_score = @product.overall_average_score %>
          <% if average_score.present? %>
            <span class="text-lg font-semibold text-stone-900"><%= format("%.1f", average_score) %>/5.0</span>
            <span class="text-amber-400"><%= "★" * average_score.round %><%= "☆" * (5 - average_score.round) %></span>
          <% else %>
            <span class="text-lg font-semibold text-stone-900">評価準備中</span>
          <% end %>
        </div>

      </div>

      <div class="rounded-3xl border border-stone-200 bg-white p-6 shadow-sm">
        <div class="aspect-square overflow-hidden rounded-2xl bg-stone-100">
          <% if @product.image.attached? %>
            <%= image_tag @product.image.variant(resize_to_fill: [640, 640]), class: "h-full w-full object-cover", alt: @product.name %>
          <% else %>
            <div class="flex h-full w-full items-center justify-center text-sm text-stone-400">
              No Image
            </div>
          <% end %>
        </div>
        <div class="mt-4 flex justify-center">
          <%= render "shared/bookmark_button",
            product: @product,
            bookmark: @bookmarks_by_product_id[@product.id] %>
        </div>
      </div>
    </div>
  </section>

  <section class="border-t border-stone-200 bg-white">
    <div class="mx-auto max-w-6xl px-6 py-12">
      <h2 class="text-3xl font-semibold font-['Fraunces']">このプロテインの特徴</h2>
      <p class="mt-3 text-sm text-stone-500">レビュー集計後に表示されます。</p>

      <div class="mt-10 space-y-6">
        <% [
          [:sweetness, "甘め", "甘くない"],
          [:richness, "濃いめ", "薄め"],
          [:aftertaste, "後味重め", "後味スッキリ"],
          [:flavor_score, "風味豊か", "風味控えめ"],
          [:solubility, "溶けやすい", "溶けにくい"],
          [:foam, "泡立ちやすい", "泡立ちにくい"]
        ].each do |key, left, right| %>
          <% avg = @product.review_averages[key] %>
          <% position = avg ? ((avg - 1) / 4.0 * 100).round(1) : 50 %>
          <div class="grid gap-4 md:grid-cols-[120px_1fr_120px] md:items-center">
            <span class="text-sm font-semibold text-emerald-600"><%= left %></span>
            <div class="relative h-2 rounded-full bg-stone-200">
              <div class="absolute left-0 top-1/2 h-4 w-4 -translate-y-1/2 rounded-full bg-emerald-200"></div>
              <div class="absolute left-1/2 top-1/2 h-4 w-4 -translate-y-1/2 rounded-full bg-emerald-200"></div>
              <div class="absolute right-0 top-1/2 h-4 w-4 -translate-y-1/2 rounded-full bg-emerald-200"></div>
              <div class="absolute top-1/2 h-4 w-4 -translate-y-1/2 rounded-full bg-emerald-500" style="left: <%= position %>%"></div>
            </div>
            <span class="text-right text-sm font-semibold text-emerald-600"><%= right %></span>
          </div>
        <% end %>
      </div>
    </div>
  </section>

  <section class="mx-auto max-w-6xl px-6 py-12">
    <div class="flex items-center justify-between">
      <h2 class="text-3xl font-semibold font-['Fraunces']">レビュー一覧</h2>
      <%= link_to "レビューをする", new_product_review_path(@product), class: "rounded-full bg-emerald-500 px-5 py-2 text-sm font-semibold text-white" %>
    </div>

    <div class="mt-8 space-y-6">
      <% if @reviews.any? %>
        <% @reviews.each do |review| %>
          <%= link_to review_path(review), class: "block rounded-3xl border border-stone-200 bg-white p-6 shadow-sm transition hover:-translate-y-0.5 hover:shadow-lg" do %>
            <div class="grid gap-6 md:grid-cols-[140px_1fr]">
              <div class="text-center">
                <% if review.user.avatar.attached? %>
                  <%= image_tag review.user.avatar.variant(resize_to_fill: [96, 96]), class: "mx-auto h-24 w-24 rounded-full object-cover", alt: review.user.username %>
                <% else %>
                  <div class="mx-auto flex h-24 w-24 items-center justify-center rounded-full bg-stone-200 text-sm font-semibold text-stone-600">
                    <%= review.user.username.to_s.first&.upcase || "U" %>
                  </div>
                <% end %>
                <p class="mt-3 text-sm font-semibold text-stone-700"><%= review.user.username %></p>
              </div>
              <div class="space-y-3">
                <div class="flex flex-wrap items-center gap-3 text-sm">
                  <span class="font-semibold text-stone-700">総合満足度</span>
                  <span class="text-amber-400"><%= "★" * review.overall_score %><%= "☆" * (5 - review.overall_score) %></span>
                  <span class="text-sm font-semibold text-stone-900"><%= review.overall_score %>.0/5.0</span>
                </div>
                <div class="text-sm text-stone-600">
                  <span class="font-semibold text-stone-700">内訳：</span>
                  甘さ：<%= review.sweetness %> / 濃さ：<%= review.richness %> / 後味：<%= review.aftertaste %> / 風味：<%= review.flavor_score %> / 溶けやすさ：<%= review.solubility %> / 泡立ち：<%= review.foam %>
                </div>
                <% if review.comment.present? %>
                  <div class="text-sm text-stone-600">
                    <span class="font-semibold text-stone-700">コメント：</span>
                    <%= review.comment %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        <% end %>
      <% else %>
        <div class="rounded-3xl border border-dashed border-stone-200 bg-white p-8 text-center text-sm text-stone-500">
          まだレビューがありません。
        </div>
      <% end %>
    </div>
  </section>
</main>
