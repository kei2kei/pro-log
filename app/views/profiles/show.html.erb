<main class="min-h-screen bg-white text-main">
  <section class="border-b border-base bg-white">
    <div class="mx-auto max-w-7xl px-6 py-12">
      <p class="text-xs uppercase tracking-[0.35em] text-brand"><%= t("profiles.show.kicker") %></p>
      <h1 class="mt-4 text-4xl font-semibold font-['Fraunces']"><%= t("profiles.show.title") %></h1>
    </div>
  </section>

  <section class="relative mx-auto max-w-6xl px-6 py-12">
    <div class="js-profile-skeleton hidden space-y-6">
      <div class="rounded-3xl border border-base bg-white p-8 shadow-sm">
        <div class="grid gap-6 md:grid-cols-[140px_1fr] md:items-center">
          <div class="mx-auto h-28 w-28 rounded-full bg-stone-100"></div>
          <div class="space-y-3">
            <div class="h-4 w-32 rounded bg-stone-100"></div>
            <div class="h-6 w-48 rounded bg-stone-100"></div>
            <div class="h-3 w-40 rounded bg-stone-100"></div>
          </div>
        </div>
        <div class="mt-8 flex flex-wrap gap-3">
          <% 3.times do %>
            <div class="h-9 w-28 rounded-full bg-stone-100"></div>
          <% end %>
        </div>
      </div>
      <div class="space-y-4">
        <% 6.times do %>
          <div class="rounded-3xl border border-base bg-white p-6 shadow-sm">
            <div class="flex items-center gap-4">
              <div class="h-16 w-16 rounded-2xl bg-stone-100"></div>
              <div class="flex-1 space-y-2">
                <div class="h-4 w-32 rounded bg-stone-100"></div>
                <div class="h-3 w-48 rounded bg-stone-100"></div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="js-profile-body">
      <div class="rounded-3xl border border-base bg-white p-8 shadow-sm">
        <div class="grid gap-6 md:grid-cols-[140px_1fr] md:items-center">
          <div class="text-center">
            <% if @user.avatar.attached? %>
              <%= image_tag @user.avatar.variant(resize_to_fill: [120, 120]), class: "mx-auto h-28 w-28 rounded-full object-cover", alt: @user.username %>
            <% else %>
              <div class="mx-auto flex h-28 w-28 items-center justify-center rounded-full bg-stone-200 text-sm font-semibold text-stone-600">
                <%= @user.username.to_s.first&.upcase || "U" %>
              </div>
            <% end %>
          </div>
          <div class="space-y-3">
            <div>
              <p class="text-xs font-semibold uppercase tracking-[0.2em] text-stone-400"><%= t("profiles.show.username_label") %></p>
              <p class="mt-1 text-xl font-semibold text-stone-900"><%= @user.username %></p>
            </div>
            <div>
              <p class="text-xs font-semibold uppercase tracking-[0.2em] text-stone-400"><%= t("profiles.show.email_label") %></p>
              <p class="mt-1 text-sm text-stone-600"><%= @user.email %></p>
            </div>
          <div class="pt-2 flex flex-col gap-3 sm:flex-row sm:flex-wrap">
            <%= link_to t("profiles.show.edit_profile"), edit_profile_path,
              class: "w-full rounded-full border border-base px-4 py-2 text-center text-xs font-semibold text-stone-600 hover:border-stone-300 sm:w-auto" %>

            <%= link_to t("profiles.show.edit_login_info"), edit_user_registration_path,
              class: "w-full rounded-full border border-base px-4 py-2 text-center text-xs font-semibold text-stone-600 hover:border-stone-300 sm:w-auto" %>

            <% if current_user.unconfirmed_email.present? %>
              <div class="mt-4 rounded-lg bg-orange-50 px-3 py-2 text-sm text-orange-700">
                <p class="font-semibold"><%= t("profiles.show.pending_confirmation.title") %></p>
                <p class="mt-1 text-xs">
                  <%= t("profiles.show.pending_confirmation.body_html", email: current_user.unconfirmed_email).html_safe %>
                </p>
                <div class="mt-3">
                  <%= link_to t("profiles.show.pending_confirmation.resend"), new_user_confirmation_path, class: "text-xs font-semibold text-brand hover:text-brand-dark" %>
                </div>
              </div>
            <% end %>
            </div>
          </div>
        </div>

        <div class="mt-8 flex flex-col gap-3 sm:flex-row sm:flex-wrap">
          <%= link_to t("profiles.show.tabs.bookmarks"), profile_path(tab: "bookmarks"), class: @tab == "bookmarks" ? "w-full rounded-full bg-brand px-5 py-2 text-center text-sm font-semibold text-white sm:w-auto" : "w-full rounded-full border border-base px-5 py-2 text-center text-sm font-semibold text-stone-600 hover:border-stone-300 sm:w-auto" %>
          <%= link_to t("profiles.show.tabs.likes"), profile_path(tab: "likes"), class: @tab == "likes" ? "w-full rounded-full bg-brand px-5 py-2 text-center text-sm font-semibold text-white sm:w-auto" : "w-full rounded-full border border-base px-5 py-2 text-center text-sm font-semibold text-stone-600 hover:border-stone-300 sm:w-auto" %>
          <%= link_to t("profiles.show.tabs.reviews"), profile_path(tab: "reviews"), class: @tab == "reviews" ? "w-full rounded-full bg-brand px-5 py-2 text-center text-sm font-semibold text-white sm:w-auto" : "w-full rounded-full border border-base px-5 py-2 text-center text-sm font-semibold text-stone-600 hover:border-stone-300 sm:w-auto" %>
        </div>

        <div class="mt-6 flex justify-end">
          <%= button_to t("profiles.show.delete_account"),
            profile_path,
            method: :delete,
            data: { turbo_confirm: t("profiles.show.delete_confirm") },
            class: "text-xs font-semibold text-stone-400 underline-offset-4 hover:text-rose-600 hover:underline" %>
        </div>
      </div>

      <% if @tab == "likes" %>
        <div class="mt-10 space-y-6">
          <% if @liked_reviews.any? %>
            <%= render partial: "profiles/review_card", collection: @liked_reviews, as: :review %>
          <% else %>
            <div class="rounded-3xl border border-dashed border-base bg-white p-8 text-center text-sm text-stone-500">
              <%= t("profiles.show.empty.likes") %>
            </div>
          <% end %>
        </div>
        <% if @liked_reviews.any? %>
          <div class="mt-10 flex justify-center">
            <%= paginate @liked_reviews %>
          </div>
        <% end %>
      <% elsif @tab == "reviews" %>
        <div class="mt-10 space-y-6">
          <% if @reviews.any? %>
            <%= render partial: "profiles/review_card", collection: @reviews, as: :review %>
          <% else %>
            <div class="rounded-3xl border border-dashed border-base bg-white p-8 text-center text-sm text-stone-500">
              <%= t("profiles.show.empty.reviews") %>
            </div>
          <% end %>
        </div>
        <% if @reviews.any? %>
          <div class="mt-10 flex justify-center">
            <%= paginate @reviews %>
          </div>
        <% end %>
      <% else %>
        <div class="mt-10 grid gap-6 md:grid-cols-2 lg:grid-cols-3">
          <% if @bookmarked_products.any? %>
            <%= render partial: "products/product",
              collection: @bookmarked_products,
              as: :product,
              locals: { bookmarks_by_product_id: @bookmarks_by_product_id } %>
          <% else %>
            <div class="rounded-3xl border border-dashed border-base bg-white p-8 text-center text-sm text-stone-500 md:col-span-2 lg:col-span-3">
              <%= t("profiles.show.empty.bookmarks") %>
            </div>
          <% end %>
        </div>
        <% if @bookmarked_products.any? %>
          <div class="mt-10 flex justify-center">
            <%= paginate @bookmarked_products %>
          </div>
        <% end %>
      <% end %>
    </div>
  </section>
</main>
