<main class="min-h-screen bg-white text-main">
  <section class="border-b border-base bg-white">
    <div class="mx-auto max-w-7xl px-6 py-12">
      <p class="text-xs uppercase tracking-[0.35em] text-brand">My Page</p>
      <h1 class="mt-4 text-4xl font-semibold font-['Fraunces']">マイページ</h1>
    </div>
  </section>

  <section class="mx-auto max-w-6xl px-6 py-12">
    <div class="rounded-3xl border border-base bg-white p-8 shadow-sm">
      <div class="grid gap-6 md:grid-cols-[140px_1fr] md:items-center">
        <div class="text-center">
          <% if @user.avatar.attached? %>
            <%= image_tag @user.avatar.variant(resize_to_fill: [120, 120]), class: "mx-auto h-28 w-28 rounded-full object-cover", alt: @user.username %>
          <% else %>
            <div class="mx-auto flex h-28 w-28 items-center justify-center rounded-full bg-stone-200 text-sm font-semibold text-stone-600">
              <%= @user.username.to_s.first&.upcase || "U" %>
            </div>
          <% end %>
        </div>
        <div class="space-y-3">
          <div>
            <p class="text-xs font-semibold uppercase tracking-[0.2em] text-stone-400">ユーザー名</p>
            <p class="mt-1 text-xl font-semibold text-stone-900"><%= @user.username %></p>
          </div>
          <div>
            <p class="text-xs font-semibold uppercase tracking-[0.2em] text-stone-400">メール</p>
            <p class="mt-1 text-sm text-stone-600"><%= @user.email %></p>
          </div>
          <div class="pt-2">
            <%= link_to "プロフィール編集", edit_profile_path, class: "rounded-full border border-base px-4 py-2 text-xs font-semibold text-stone-600 hover:border-stone-300" %>
            <%= link_to "パスワード変更", edit_user_registration_path, class: "rounded-full border border-base px-4 py-2 text-xs font-semibold text-stone-600 hover:border-stone-300" %>
          </div>
        </div>
      </div>

      <div class="mt-8 flex flex-wrap gap-3">
        <%= link_to "ブックマーク", profile_path(tab: "bookmarks"), class: @tab == "bookmarks" ? "rounded-full bg-brand px-5 py-2 text-sm font-semibold text-white" : "rounded-full border border-base px-5 py-2 text-sm font-semibold text-stone-600 hover:border-stone-300" %>
        <%= link_to "いいね", profile_path(tab: "likes"), class: @tab == "likes" ? "rounded-full bg-brand px-5 py-2 text-sm font-semibold text-white" : "rounded-full border border-base px-5 py-2 text-sm font-semibold text-stone-600 hover:border-stone-300" %>
        <%= link_to "レビュー", profile_path(tab: "reviews"), class: @tab == "reviews" ? "rounded-full bg-brand px-5 py-2 text-sm font-semibold text-white" : "rounded-full border border-base px-5 py-2 text-sm font-semibold text-stone-600 hover:border-stone-300" %>
      </div>
    </div>

    <% if @tab == "likes" %>
      <div class="mt-10 space-y-6">
        <% if @liked_reviews.any? %>
          <% @liked_reviews.each do |review| %>
            <div class="rounded-3xl border border-base bg-white p-6 shadow-sm transition hover:-translate-y-0.5 hover:shadow-md">
              <%= link_to review_path(review), class: "block" do %>
                <div class="grid gap-6 md:grid-cols-[140px_1fr]">
                  <div class="text-center">
                    <% if review.user.avatar.attached? %>
                      <%= image_tag review.user.avatar.variant(resize_to_fill: [96, 96]), class: "mx-auto h-24 w-24 rounded-full object-cover", alt: review.user.username %>
                    <% else %>
                      <div class="mx-auto flex h-24 w-24 items-center justify-center rounded-full bg-stone-200 text-sm font-semibold text-stone-600">
                        <%= review.user.username.to_s.first&.upcase || "U" %>
                      </div>
                    <% end %>
                    <p class="mt-3 text-sm font-semibold text-stone-700"><%= review.user.username %></p>
                  </div>
                  <div class="space-y-3">
                    <div class="flex flex-wrap items-center gap-3 text-sm">
                      <span class="font-semibold text-stone-700">総合満足度</span>
                      <span class="text-accent"><%= "★" * review.overall_score %><%= "☆" * (5 - review.overall_score) %></span>
                      <span class="text-sm font-semibold text-stone-900"><%= review.overall_score %>.0/5.0</span>
                    </div>
                    <div class="text-sm text-stone-600">
                      <span class="font-semibold text-stone-700">商品：</span>
                      <%= review.product.name %> / <%= review.product.brand %>
                    </div>
                    <% if review.comment.present? %>
                      <div class="text-sm text-stone-600">
                        <span class="font-semibold text-stone-700">コメント：</span>
                        <%= review.comment %>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        <% else %>
          <div class="rounded-3xl border border-dashed border-base bg-white p-8 text-center text-sm text-stone-500">
            まだいいねしたレビューがありません。
          </div>
        <% end %>
      </div>
      <% if @liked_reviews.any? %>
        <div class="mt-10 flex justify-center">
          <%= paginate @liked_reviews %>
        </div>
      <% end %>
    <% elsif @tab == "reviews" %>
      <div class="mt-10 space-y-6">
        <% if @reviews.any? %>
          <%= render partial: "reviews/review", collection: @reviews, as: :review %>
        <% else %>
          <div class="rounded-3xl border border-dashed border-base bg-white p-8 text-center text-sm text-stone-500">
            まだレビューがありません。
          </div>
        <% end %>
      </div>
      <% if @reviews.any? %>
        <div class="mt-10 flex justify-center">
          <%= paginate @reviews %>
        </div>
      <% end %>
    <% else %>
      <div class="mt-10 grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        <% if @bookmarked_products.any? %>
          <%= render partial: "products/product",
            collection: @bookmarked_products,
            as: :product,
            locals: { bookmarks_by_product_id: @bookmarks_by_product_id } %>
        <% else %>
          <div class="rounded-3xl border border-dashed border-base bg-white p-8 text-center text-sm text-stone-500 md:col-span-2 lg:col-span-3">
            まだ該当する商品がありません。
          </div>
        <% end %>
      </div>
      <% if @bookmarked_products.any? %>
        <div class="mt-10 flex justify-center">
          <%= paginate @bookmarked_products %>
        </div>
      <% end %>
    <% end %>
  </section>
</main>
