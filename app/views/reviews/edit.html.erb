<% content_for :head do %>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@yaireo/tagify/dist/tagify.css">
  <script src="https://cdn.jsdelivr.net/npm/@yaireo/tagify/dist/tagify.min.js" defer></script>
<% end %>
<main class="min-h-screen bg-white text-main">
  <section class="border-b border-base bg-white">
    <div class="mx-auto max-w-7xl px-4 py-10 sm:px-6 sm:py-12">
      <p class="text-xs uppercase tracking-[0.35em] text-brand"><%= t("reviews.form.kicker") %></p>
      <h1 class="mt-4 text-3xl font-semibold font-['Fraunces'] sm:text-4xl"><%= t("reviews.edit.title") %></h1>
    </div>
  </section>

  <section class="mx-auto max-w-7xl px-4 py-10 sm:px-6 sm:py-12">
    <div class="rounded-3xl border border-base bg-white p-6 shadow-sm sm:p-8">
      <%= render "devise/shared/error_messages", resource: @review %>

      <div class="grid gap-8 md:grid-cols-[1fr_220px] md:items-center">
        <div>
          <p class="text-sm text-stone-500"><%= t("reviews.form.product_label") %></p>
          <h2 class="mt-2 text-2xl font-semibold"><%= @product.name %></h2>
          <p class="mt-1 text-sm text-stone-500"><%= @product.brand %></p>
        </div>
        <div class="aspect-square overflow-hidden rounded-2xl bg-stone-100">
          <% if @product.image_url.present? %>
            <%= image_tag @product.image_url, class: "h-full w-full object-contain", alt: @product.name %>
          <% else %>
            <div class="flex h-full w-full items-center justify-center text-sm text-stone-400">
              <%= t("reviews.form.no_image") %>
            </div>
          <% end %>
        </div>
      </div>

      <%= render "form", form_model: @review, review: @review, product: @product, cancel_path: review_path(@review) %>
    </div>
  </section>
</main>

<script>
  const initOverallScore = () => {
    const output = document.getElementById("overall-score-value");
    const inputs = document.querySelectorAll('input[name="review[overall_score]"]');
    if (!output || inputs.length === 0) return;

      const update = () => {
        const checked = Array.from(inputs).find((input) => input.checked);
        output.textContent = checked ? `${checked.value}.0/5.0` : "<%= j(t("reviews.form.overall_unselected")) %>";
      };

    inputs.forEach((input) => input.addEventListener("change", update));
    update();
  };

  document.addEventListener("turbo:load", initOverallScore);
  document.addEventListener("turbo:render", initOverallScore);
</script>
