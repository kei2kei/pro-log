<% scores = values || {} %>
<div class="space-y-6">
  <% [
    [:sweetness, "甘さ", "甘め", "やや甘め", "普通", "やや甘さ控えめ", "甘くない"],
    [:richness, "濃さ", "濃いめ", "やや濃いめ", "普通", "やや薄め", "薄め"],
    [:aftertaste, "後味", "後味重め", "やや重め", "普通", "ややスッキリめ", "後味スッキリ"],
    [:flavor_score, "風味", "風味豊か", "やや風味あり", "普通", "やや風味控えめ", "風味控えめ"],
    [:solubility, "溶けやすさ", "溶けやすい", "やや溶けやすい", "普通", "やや溶けにくい", "溶けにくい"],
    [:foam, "泡立ち", "泡立ちやすい", "やや泡立ちやすい", "普通", "やや泡立ちにくい", "泡立ちにくい"]
  ].each do |key, axis_label, strong, semi_strong, normal_label, semi_weak, weak| %>
    <% value = scores[key] || scores[key.to_s] %>
    <% position = value ? ((value - 1) / 4.0 * 100).round(1) : 50 %>
    <div class="grid gap-3 md:grid-cols-[140px_1fr] md:items-start">
      <div class="pt-1 text-sm font-semibold text-stone-700"><%= axis_label %></div>
      <div class="space-y-1">
        <div class="grid grid-cols-5 gap-x-1 text-[10px] leading-tight text-stone-500">
          <span class="col-start-1 text-left"><%= weak %></span>
          <span class="col-start-3 text-center"><%= normal_label %></span>
          <span class="col-start-5 text-right"><%= strong %></span>
          <span class="col-start-2 hidden text-center sm:inline"><%= semi_weak %></span>
          <span class="col-start-4 hidden text-center sm:inline"><%= semi_strong %></span>
        </div>
        <div class="relative h-3 rounded-full bg-stone-200">
          <% [0, 25, 50, 75, 100].each do |mark| %>
            <div class="absolute top-1/2 h-4 w-[2px] -translate-y-1/2 bg-stone-400" style="left: <%= mark %>%"></div>
          <% end %>
          <div class="absolute top-1/2 h-4 w-4 -translate-x-1/2 -translate-y-1/2 rounded-full bg-brand shadow" style="left: <%= position %>%"></div>
        </div>
      </div>
    </div>
  <% end %>
</div>
