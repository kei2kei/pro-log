<%= turbo_frame_tag dom_id(product, :bookmark) do %>
  <% if user_signed_in? && bookmark.present? %>
    <%= button_to bookmark_path(bookmark), method: :delete,
      class: "flex w-full items-center justify-center gap-2 rounded-full border border-emerald-500 px-4 py-2 text-xs font-semibold text-emerald-600 hover:border-emerald-600",
      aria: { label: t("shared.bookmark.remove") },
      form: { data: { loading: "skip" } } do %>
      <span class="text-amber-400">★</span>
      <%= t("shared.bookmark.saved") %>
    <% end %>
  <% elsif user_signed_in? %>
    <%= button_to bookmarks_path(product_id: product.id), method: :post,
      class: "flex w-full items-center justify-center gap-2 rounded-full border border-stone-200 px-4 py-2 text-xs font-semibold text-stone-600 hover:border-stone-300",
      aria: { label: t("shared.bookmark.add") },
      form: { data: { loading: "skip" } } do %>
      <span class="text-stone-400">☆</span>
      <%= t("shared.bookmark.add") %>
    <% end %>
  <% end %>
<% end %>
