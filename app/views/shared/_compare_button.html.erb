<% if compared_product_ids.include?(product.id) %>
  <button type="button" class="w-full rounded-full border border-base px-4 py-2 text-xs font-semibold text-stone-400" disabled>
    <%= t("shared.compare.selected") %>
  </button>
<% elsif compare_full? %>
  <button type="button" class="w-full rounded-full border border-base px-4 py-2 text-xs font-semibold text-stone-400" disabled>
    <%= t("shared.compare.full") %>
  </button>
<% else %>
  <%= button_to t("shared.compare.add"),
    compare_items_path(product_id: product.id),
    method: :post,
    class: "w-full rounded-full border border-base px-4 py-2 text-xs font-semibold text-stone-600 hover:border-stone-300" %>
<% end %>
