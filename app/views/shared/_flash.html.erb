<div id="flash" class="bg-white">
  <% if flash[:notice].present? || flash[:alert].present? %>
    <div class="mx-auto w-full max-w-7xl px-6 pt-6">
      <% if flash[:notice].present? %>
        <div class="rounded-xl border border-emerald-100 bg-emerald-50 px-4 py-3 text-sm text-emerald-800 shadow-sm">
          <%= flash[:notice] %>
        </div>
      <% end %>
      <% if flash[:alert].present? %>
        <div class="mt-3 rounded-xl border border-rose-100 bg-rose-50 px-4 py-3 text-sm text-rose-800 shadow-sm">
          <%= flash[:alert] %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
