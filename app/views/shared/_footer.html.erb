<% footer_padding_class = user_signed_in? && compared_product_ids.any? ? "pb-85 md:pb-60 lg:pb-40" : "" %>
<footer class="border-t border-base bg-white text-stone-600 <%= footer_padding_class %>">
  <div class="mx-auto flex max-w-7xl flex-col gap-6 px-6 py-10 md:flex-row md:items-center md:justify-between">
    <p class="text-sm"><%= t("shared.footer.copyright") %></p>
    <div class="flex flex-wrap gap-6 text-sm">
      <%= link_to t("shared.footer.contact"), contact_path, class: "transition hover:text-brand" %>
      <%= link_to t("shared.footer.terms"), terms_path, class: "transition hover:text-brand" %>
      <%= link_to t("shared.footer.privacy"), privacy_path, class: "transition hover:text-brand" %>
      <a class="transition hover:text-brand" href="https://www.freepik.com" target="_blank" rel="noopener"><%= t("shared.footer.freepik_credit") %></a>
    </div>
  </div>
</footer>
