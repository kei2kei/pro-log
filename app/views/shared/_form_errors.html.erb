<% if resource&.errors&.any? %>
  <div class="rounded-2xl border border-rose-100 bg-rose-50 px-4 py-3 text-sm text-rose-700" data-turbo-cache="false">
    <p class="font-semibold"><%= t("shared.form_errors.title", count: resource.errors.count) %></p>
    <ul class="mt-2 list-disc space-y-1 pl-5">
      <% resource.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
