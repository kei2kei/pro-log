<%= turbo_frame_tag dom_id(review, :like) do %>
  <% if current_user && review.user_id != current_user.id %>
    <% if current_user.like?(review) %>
      <%= render "shared/unlike_button", review: review %>
    <% else %>
      <%= render "shared/like_button", review: review %>
    <% end %>
  <% end %>
<% end %>
